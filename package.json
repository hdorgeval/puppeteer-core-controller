{
  "name": "puppeteer-core-controller",
  "version": "0.0.1",
  "description": "fluent API around puppeteer-core",
  "main": "build/controller.js",
  "typings": "build/controller.d.ts",
  "files": [
    "build",
    "!*.test.js",
    "!*.test.d.ts"
  ],
  "scripts": {
    "build": "rimraf build && npm run format && npm run lint && npm run tsc",
    "check-format": "prettier --list-different \"lib/**/*.ts\" ",
    "eslint-init": "eslint --init",
    "format": "prettier --write \"lib/**/*.ts\" ",
    "jest-init": "jest --init",
    "lint": "eslint . --ext .js,.ts --format visualstudio --no-color --max-warnings 10 --report-unused-disable-directives",
    "package": "rimraf package && rm -f puppeteer-core-controller*.tgz && npm pack",
    "test": "jest --config=jest.config.js --runInBand",
    "tsc": " tsc --listEmittedFiles",
    "tsc-init": "tsc --init"
  },
  "author": "Henri d'Orgeval",
  "license": "ISC",
  "dependencies": {
    "@types/which": "1.3.1",
    "puppeteer-core": "1.18.1",
    "which": "1.3.1"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@types/node": "12.6.2",
    "@types/puppeteer-core": "1.9.0",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.12.0",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "jest": "24.8.0",
    "prettier": "1.18.2",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  },
  "engines": {
    "node": ">=6.4.0"
  }
}
